@import "animate.styl"

@import url('https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700&display=swap');

red = #A93F55
darkgray = #333
gray = #555
lightgray = #888

font = 'Roboto'

html, body
    display block
    width 100%
    height 100%
    overflow hidden
    padding 0
    margin 0
    font-family font

input,
textarea
   font-family font

input
input:focus
   outline none

input[type="button"], button{
   outline:none;
}
input[type="button"]::-moz-focus-inner,
button::-moz-focus-inner {
   border: 0;
}

input[type="button"]:focus,
button:focus {
  opacity .8
}

a,
a:hover
   text-decoration none

mat-sidenav-container
   width: 100%;
   height: 100%;