@import "animate.styl"

@import url('https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700&display=swap');
@import url('https://fonts.googleapis.com/css?family=Quicksand:300,400,500,600,700&display=swap');

primary_dark = #4576E0
primary_light = #659AFA
secondary_dark = #EDF4F5
secondary_light = #F3F8FE
darkgray = #333
gray = rgba(49, 60, 77, .8)
lightgray = #888

font = 'Quicksand', sans-serif

html, body
    display block
    width 100%
    height 100%
    overflow hidden
    padding 0
    margin 0
    font-family font

input,
textarea
   font-family font

input
input:focus
   outline none

input[type="button"], button{
   outline:none;
}
input[type="button"]::-moz-focus-inner,
button::-moz-focus-inner {
   border: 0;
}

input[type="button"]:focus,
button:focus {
  opacity .8
}

a,
a:hover
   text-decoration none

mat-sidenav-container
   width: 100%;
   height: 100%;