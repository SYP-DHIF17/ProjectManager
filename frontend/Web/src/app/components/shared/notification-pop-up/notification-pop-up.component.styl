@import "../../../../styles.styl";

#notification-popup
    width 350px
    height auto
    position absolute
    bottom 150px
    right 150px
    z-index 100000000000000000000

    .container
        background dark
        border solid 2px very_dark
        position relative
        width calc(100% - 20px)
        height calc(100% - 20px)
        border-radius 5px
        overflow hidden

        .top
            display flex
            width cacl(100% - 20px)
            height auto
            justify-content space-between
            align-items: center
            align-content: center
            flex-direction: row
            background green_dark
            padding 7px 10px

            p
                color white
                font-weight: bold
                font-size 18px
                padding 0px
                margin 0px

            .close
                font-size 18px
                color white
                transition: all 300ms
                cursor pointer

                &:hover
                    opacity: .8

        .text
            width calc(100% - 0px)
            height auto
            min-height 50px
            color dark
            padding 10px
            font-size 17px
            display: flex
            background: white
            justify-content center
            align-items: center
            align-content: center

    .success
        background green !important
        border-color green_dark !important

    .warning
        background yellow !important
        border-color yellow_dark !important

    .error
        background red !important
        border-color red_dark !important