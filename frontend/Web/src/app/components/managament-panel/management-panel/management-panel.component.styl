@import "../../../../styles.styl"

outer_radius = 15px
shadow_container = 0px 0px 8px rgba(51, 51, 51, 0.35)

#panel
    display flex
    justify-content center
    align-items center
    alin-content center
    width 100%
    height 100%
    overflow hidden
    background url('/assets/dashboard_background.webp') center no-repeat
    background-size cover

    .panel-container
        width 89%
        height 85%
        display flex
        align-content center
        align-items center
        flex-direction row
        background secondary_dark
        border-radius outer_radius
        overflow hidden

        .sidebar-nav
            width 120px
            height 100%
            position relative
            box-shadow shadow_container
            background white

        .content
            width calc(100% - 120px)
            height 100%

@media screen and (max-width 1920px)
    #panel
        .panel-container
            width 92%
            height 91%

@media screen and (max-width 1200px)
    #panel
        .panel-container
            width 95%
            height 95%

@media screen and (max-width 1000px)
    #panel
        .panel-container
            width 100%
            height 100%
            border-radius 0px