@import "../../../../../styles.styl"

#project-details
    width 100%
    height 100%
    padding 35px
    overflow auto
    box-sizing border-box

    h1
        font-size 28px
        color primary_dark
        padding-bottom 10px

    h2
        margin 0
        padding 0

    input,
    textarea
        width 600px
        resize none
        background white
        border solid 1px lightgray
        padding 10px
        margin-bottom 15px
        border-radius 4px
        font-size 17px

    textarea
        height 150px

    p
        margin 0
        padding-bottom 6px
        padding-left 2px
        font-size 15px
        color #444
        font-weight 600

    .inline-header
        display inline-block
        padding 0px 10px 0px 0px
        font-size 20px
        font-weight bold
        color primary_dark

    .add
        width auto
        background primary_dark
        color white
        padding 8px 10px
        font-size 14px
        cursor pointer
        border-radius 4px
        transition all 300ms
        margin-left 20px

        &:hover
            opacity .8

    .team-list
        width 70%
        margin-top 20px
        background white
        border-radius 4px
        border solid 1px lightgray
        padding 15px 5px
        box-sizing border-box

        li
            padding-left 0px
            padding-top 15px
            margin-left 50px
            font-size 17px
            font-weight 500
            color #333
            list-style: circle

            &:first-child
                padding-top 0px

   .top
       width 100%
       height auto
       display flex
       justify-content space-between
       align-items flex-start
       align-content flex-start

       .left,
       .right
           width 56%

    .bottom
        margin-top 30px

        .project-part-list
            width 100%
            padding-top 20px
            display flex
            flex-direction row
            justify-content flex-start

            .outer-list
                width 100%
                display flex
                justify-content flex-start
                flex-direction row

                .outer-item
                    width 330px
                    height auto
                    margin-bottom 20px
                    margin-right 30px

                    li
                        margin-bottom 20px
                        background white
                        border-radius 4px
                        border solid 1px lightgray
                        padding 15px
                        transition all 400ms
                        cursor pointer

                        h4
                            color primary_dark
                            padding-bottom 8px
                            padding-left 0px
                            transition all 400ms

                        p
                            font-size 17px !important
                            color #222 !important
                            font-weight 700 !important
                            padding-left 0px !important

                        .outer-span
                            display block
                            padding 8px 0px 0px 0px
                            font-size 15px
                            color #444

                            span
                                display inline-block
                                width 140px
                                font-weight 600
                                color #333

                    .selected
                        border-color green

                        h4
                            color green