@import "../../management-panel/management-panel.component.styl"
@import "../../../../styles.styl"

#header
	height 130px
	box-sizing border-box
	padding 25px

#inner-header
	border-radius 8px
	background white
	width 100%
	height 100%
	box-shadow shadow_container
	display flex
	flex-direction row
	align-items stretch
	justify-content space-between
	overflow hidden

	button
		color #9599A0 !important

	&>div
		height 100%
		line-height 100%

	.left-side, .right-side
		display flex
		flex-direction row
		align-items center
		height 100%

		&>div
			border-right 1px solid seperation_border
			border-left 1px solid seperation_border

	.button-field
		height 100%

		button
			cursor pointer
			transition all 200ms
			display flex
			align-items center
			justify-content center
			height 100%
			padding 0 20px
			box-sizing border-box

			img
				height 40px
				width 40px
				margin-left 15px
				border-radius 80%

			&:hover
				background secondary_light
				color primary_light !important

	.left-side
		&>div:first-child
			border-left none

	.right-side
		justify-content right
		width auto

		.button-field.flag
			width 70px
			min-width 0
			position relative

			i
				font-size 20px

			span
				position absolute
				top 19%
				left 67%
				color white
				background #f23232
				width 17px
				height 17px
				display flex
				justify-content center
				align-items center
				align-content center
				padding-bottom 2px
				border-radius 30%

		&>div:last-child
			border-right none

	.button-field
		height 100%
		min-width 100px

		button
			width 100%
			height 100%

#new-project
	height 100%
	font-size 12px

	button
		font-family font
		font-weight bolder
		display flex
		height 100%
		align-items center
		transition all 200ms

		#plus
			background linear-gradient(180deg, #4576E0 0%, #4576E0 0.01%, rgba(81, 132, 234, 0.614583) 99.99%, #659AFA 100%)
			height 40px
			width 40px
			border-radius 20px
			line-height 40px
			color white
			margin-right 15px
			font-size 12px
			transition all 350ms
			position relative

			&:focus
				opacity 1

			i
				font-size 15px
				padding-left 1px

		&:hover
			background white !important
			color primary_light !important

		&:hover > #plus
			transform scale(1.1)

@media screen and (max-width 1090px)
	#header
		#inner-header
			.left-side
				#new-project
					button
						font-size 14px

						#plus
							margin-right 10px

