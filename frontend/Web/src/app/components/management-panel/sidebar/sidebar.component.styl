@import "../../../../styles.styl"

#sidebar
    width 100%
    height 100%
    background white

    .logo
        width 100%
        height 120px
        display flex
        flex-direction row
        justify-content center
        align-items center

    .nav
        display flex
        justify-content center
        flex-direction column
        width 100%
        height auto

        .icon
            border-radius 14px
            width 55px
            height 55px
            margin 20px auto 30px auto
            display flex
            justify-content center
            align-content center
            align-items center
            cursor pointer
            transition all 300ms
            flex-direction column

            a
                text-decoration: none
                color lightgray
                text-align: center
                transition: 200ms all;

                &:hover
                    color primary_light

            div
                i
                    font-size 29px

            span
                font-size 14px
                padding-top 8px
                text-transform uppercase
                font-weight 500


        .icon-active
            box-shadow shadow_icon
            color primary_light

        .icon-inactive
            color lightgray !important

        .nav-active
            color primary_light !important

        .dashboard
            text-align center
            margin 20px auto 35px auto
            font-size 27px !important
            background white

            i
                margin-top -3px

        h3
            margin 0
            margin-bottom 15px
            padding 0
            text-transform uppercase
            font-size 16px
            font-weight bolder
            color gray
            text-align center

@media screen and (max-width 1400px)
    #sidebar
        .nav
            .icon
                font-size 14px
                margin 10px auto 20px auto

                div i
                    font-size 26px
