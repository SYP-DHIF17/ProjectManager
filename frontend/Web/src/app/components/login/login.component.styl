@import "../../../styles.styl"

#login
    width 100%
    height 100%
    background red
    display flex
    justify-content center
    align-content center
    align-items center

    .container
        width 400px
        height auto
        padding 20px
        background white
        display flex
        flex-direction column
        border-radius 10px
        justify-content center

        .title
            display block
            width 100%
            text-align center
            color gray
            padding 10px 0px
            margin 0px
            font-weight 500
            text-transform uppercase

        div
            width 95%
            padding-top 10px
            text-align center
            margin 0 auto

            input
                width 80%
                border none
                margin 0 auto
                text-align left
                border-bottom solid 1px lightgray
