@import "../../../styles.styl"

#loader{
    width 100%
    height 100%
    background rgba(235, 235, 235, .8)
    z-index 1000
    position absolute
    top 0
    left 0

    section{
        position absolute
        width 100%
        height 100%
        top 45%
        left 48%
    }

    .lds-ripple {
        display: inline-block;
        position: relative;
        width: 100px;
        height: 100px;
    }

    .lds-ripple div {
        position: absolute;
        border: 5px solid primary_dark;
        opacity: 1;
        border-radius: 50%;
        animation: lds-ripple 1s cubic-bezier(0, 0.2, 0.8, 1) infinite;
    }

    .lds-ripple div:nth-child(2) {
        animation-delay: -0.5s;
    }

    @keyframes lds-ripple {
        0% {
            top: 28px;
            left: 28px;
            width: 0;
            height: 0;
            opacity: 1;
        }
        
        100% {
            top: -1px;
            left: -1px;
            width: 58px;
            height: 58px;
            opacity: 0;
        }
    }    
}